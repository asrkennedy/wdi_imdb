<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @movie.name %>
</p>

<p>
  <%= image_tag @movie.movie_image.detail.url %>
</p>

<p>
  <b>Rating:</b>
  <%= @movie.rating %>
</p>

<p>
  <b>Year:</b>
  <%= @movie.year %>
</p>

<p>
  <b>Run time:</b>
  <%= @movie.run_time %>
</p>

<p>
  <b>Director:</b>
  <%= @movie.director %>
</p>

<p>
  <b>Actors:</b>
  <% @movie.actors.each do |actor| %>
  <%= link_to actor.name, actor_path(actor) %>
  <% end %>
  <br>
</p>

<p>
  <b>Characters:</b>
  <% @movie.characters.each do |character| %>
  <%= link_to character.name, character_path(character) %>
  <% end %>
  <br>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
